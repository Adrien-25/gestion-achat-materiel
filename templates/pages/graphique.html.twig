{% extends "./base.html.twig" %}
{% block title %}Graphique{% endblock title %}
{% block add %}
<div class="container">
    <div class="row">
        <div class="col">
            <!-- début modal -->
            <div class="modal fade"style="margin-top:250px;" data-backdrop="false" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Voir les dépenses par catégories</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="graphique.php" method="POST">
      <div class="modal-body mx-3 ">
        <div class="md-form mb-5  ">
           <input type="date" name="date_debut" id="defaultForm-email" class="form-control validate">
          <label data-error="wrong" data-success="right" for="defaultForm-email">Date de début des dépenses </label>
        </div>

        <div class="md-form mb-4 "> 
          
   <input type="date" name="date_fin" id="defaultForm-pass" class="form-control validate">
          <label data-error="wrong" data-success="right" for="defaultForm-pass">Date de fin des dépenses</label>
        </div>

      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-info">Afficher le graphique</button>
      </div>
    </form>
    </div>
  </div>
 </div> 
<!-- fin modal  -->

 <div class="text-center">
  <a href="" class="btn btn-info btn-rounded mb-4" data-toggle="modal" data-target="#modalLoginForm">Définissez les dates!</a>
</div> 


    
 


</div>
</div>
</div>
{% set fullDepense = ''  %}
{% for categorieDepense in depense %}

{% set fullDepense = [fullDepense , categorieDepense]|join('|')  %}

{% endfor %}


<canvas id="graphDepense" width="400" height="400" data-graphique="{{fullDepense}}"></canvas>

{% endblock add %}

