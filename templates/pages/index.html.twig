{% extends "./base.html.twig" %}
{% block title %}Accueil{% endblock title %}

{% block add %}
<div class="row">
{% for produit in liste_produits %}

  <div class="col-sm-12 col-md-6 col-lg-4 card" style="width: 18rem;">
    <img class="card-img-top" src="images/{{produit.categorie}}.jpg" alt="Card image cap">
    <div class="card-body d-flex justify-content-between  ">
      <h5 class="card-title">{{produit.nom}}</h5>
      <p class="card-text"><span>{{produit.prix}}</span> <i class="fas fa-euro-sign"></i></p>
    </div>

    <ul class="list-group list-group-flush">
      {%if produit.adresse == empty  %}
       <li class="list-group-item">{{produit.url}}</li>
      {%else%}
       <li class="list-group-item">{{produit.adresse}}</li>
      {%endif%}
      {# <li class="list-group-item">{{produit.prix}} Euros</li> #}
      <li class="list-group-item">réf: {{produit.reference}}</li>
      <li class="list-group-item">Fin de garantie {{produit.date_fin_garantie|date("m/d/Y")}}</li>
      <li class="list-group-item">Acheté le {{produit.date_achat|date("m/d/Y")}}</li>
      <li class="list-group-item">{{produit.conseil_entretien}}</li>
      <li class="list-group-item"><a href="media/{{produit.ticket_achat}}"target="_blank">{{produit.ticket_achat}}</a></li>
      <li class="list-group-item"><a href="media/{{produit.manuel}}"target="_blank">{{produit.manuel}}</a></li>
    </ul>

    <div class="card-body d-flex justify-content-between align-items-center">
      <a href="modifier.php?id={{produit.id}}" class="card-link"><i class="far fa-2x fa-edit"></i></a>
      <a href="supprimer.php?id={{produit.id}}" class="card-link"><i class="far fa-2x fa-trash-alt"></i></a>
    </div>
  </div>
{% endfor %}
</div>
{% endblock add %}     
                      
                       








                      


                        


                       

                        
                       


                        



                        

                       
                            
                        

    



    




